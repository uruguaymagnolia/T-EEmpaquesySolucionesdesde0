// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("POSTGRES_URL")
}
model Product {
  id          String   @id @default(cuid())
  name        String   @unique
  slug        String   @unique
  description String
  imageUrl    String
  imageAlt    String
  dataAiHint  String?
  category    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model CaseStudy {
  id               String   @id @default(cuid())
  title            String   @unique
  slug             String   @unique
  shortDescription String
  imageUrl         String
  imageAlt         String
  dataAiHint       String?
  category         String
  problem          String
  solution         String
  results          String
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}
